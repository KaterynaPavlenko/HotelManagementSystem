<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
    <div class="container">
        <img class="img-fluid logo" src="~/Content/Image/logo.png" alt="logo">

        @Html.ActionLink("Hotel", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})

        <div class="navbar-collapse collapse justify-content-between">
            <ul class="nav navbar-nav">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new {area = ""}, new {@class = "nav-link"})</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", new {area = ""}, new {@class = "nav-link"})</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new {area = ""}, new {@class = "nav-link"})</li>

                @if (User.IsInRole("administrator"))
                {
                    <li class="nav-item">@Html.ActionLink("Dashboard", "AdminManage", "Admin", new {area = ""}, new {@class = "nav-link"})</li>
                }

                @if (User.IsInRole("manager"))
                {
                    <li class="nav-item">@Html.ActionLink("Dashboard", "Dashboard", "Manager", new {area = ""}, new {@class = "nav-link"})</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")

        </div>
    </div>
</div>
<div class="body-content p-0 ">
    @RenderBody()
    <hr/>
    <footer class="text-center footer-custom">
        &copy; @DateTime.Now.Year - Hotel Mentha
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
</body>
</html>