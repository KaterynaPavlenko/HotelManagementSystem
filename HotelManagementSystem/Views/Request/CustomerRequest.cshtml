@model HotelManagementSystem.Models.CustomerRequestViewModel
@{
    ViewBag.Title = "Leave a request";
}

<div class="container">
    <div class="card border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <h1 class="h4 text-gray mb-4 text-center">Customer Request</h1>
            @if (ViewBag.ErrorMessage != null)
            {
                <p class="validation-summary-errors text-center"> @ViewBag.ErrorMessage</p>
            }
            <div class="row justify-content-center">


                <div class="text-center">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <hr/>
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="form-group ">
                            <div class="col">
                                @Html.LabelFor(model => model.DateFrom)
                            </div>
                            @Html.TextBoxFor(model => model.DateFrom, new {type = "date", min = DateTime.Now.ToString("yyyy-MM-dd")})
                            @Html.ValidationMessageFor(model => model.DateFrom, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            <div class="col">
                                @Html.LabelFor(model => model.DateTo)
                            </div>
                            @Html.TextBoxFor(model => model.DateTo, new {type = "date", min = DateTime.Now.ToString("yyyy-MM-dd")})
                            @Html.ValidationMessageFor(model => model.DateTo, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            <div class="col">
                                @Html.LabelFor(model => model.Sleeps)
                            </div>

                            @Html.EditorFor(model => model.Sleeps, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.Sleeps, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            <div class="col">
                                @Html.LabelFor(model => model.RoomTypeId)
                            </div>
                            @Html.DropDownListFor(m => m.RoomTypeId, ViewBag.RoomTypes as SelectList, new {@class = "form-control"}) <br/>
                            @Html.ValidationMessageFor(model => model.RoomTypeId, "", new {@class = "text-danger"})
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary  btn-block"/>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}