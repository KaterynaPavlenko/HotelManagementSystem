@model HotelManagementSystem.Models.RoomViewModel
@{
    ViewBag.Title = "CreateRoom";
}


<div class="container">
    <div class="card border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="row justify-content-center">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray mb-4">@ViewBag.Title</h1>
                        @using (Html.BeginForm("CreateRoom", "Admin", new {ViewBag.ReturnUrl}, FormMethod.Post, new {enctype = "multipart/form-data"}))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group ">
                                <hr/>
                                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.RoomDescription)
                                    </div>

                                    @Html.EditorFor(model => model.RoomDescription, new {htmlAttributes = new {@class = "form-control", required = " ", oninvalid = "this.setCustomValidity('Please enter a description')", oninput = "setCustomValidity('')"}})
                                    @Html.ValidationMessageFor(model => model.RoomDescription, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.RoomNumber)
                                    </div>

                                    @Html.EditorFor(model => model.RoomNumber, new {htmlAttributes = new {@class = "form-control", required = " ", oninvalid = "this.setCustomValidity('Please enter a room number')", oninput = "setCustomValidity('')"}})
                                    @Html.ValidationMessageFor(model => model.RoomNumber, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.RoomPriceForOneNight)
                                    </div>
                                    @Html.EditorFor(model => model.RoomPriceForOneNight, new {htmlAttributes = new {@class = "form-control", required = " ", oninvalid = "this.setCustomValidity('Please enter a price')", oninput = "setCustomValidity('')"}})
                                    @Html.ValidationMessageFor(model => model.RoomPriceForOneNight, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.Sleeps)
                                    </div>
                                    @Html.EditorFor(model => model.Sleeps, new {htmlAttributes = new {@class = "form-control", required = "", oninvalid = "this.setCustomValidity('Please  enter a sleeps')", oninput = "setCustomValidity('')"}})
                                    @Html.ValidationMessageFor(model => model.Sleeps, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.RoomImage)
                                    </div>
                                    <input type="file" name="ImageFile" required oninvalid="this.setCustomValidity('Please add image')" oninput="setCustomValidity('')"/>
                                </div>
                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.RoomTypeId)
                                    </div>

                                    @Html.DropDownListFor(m => m.RoomTypeId, ViewBag.RoomTypes as SelectList, new {@class = "form-control"}) <br/>

                                    @Html.ValidationMessageFor(model => model.RoomTypeId, "", new {@class = "text-danger"})
                                </div>
                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.RoomStatusId)
                                    </div>
                                    @Html.DropDownListFor(m => m.RoomStatusId, ViewBag.RoomStatuses as SelectList, new {@class = "form-control"}) <br/>

                                    @Html.ValidationMessageFor(model => model.RoomStatusId, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-success"/>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>