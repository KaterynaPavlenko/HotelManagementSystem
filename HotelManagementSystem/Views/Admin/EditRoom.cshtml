@model HotelManagementSystem.Models.RoomViewModel
@{
    ViewBag.Title = "EditRoom";
}


<div class="container">
    <div class="card border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="row justify-content-center">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray mb-4">@ViewBag.Title</h1>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <h4>RoomViewModel</h4>
                                <hr/>
                                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-group">
                                    <div class="text-center">
                                        @Html.LabelFor(model => model.RoomDescription)
                                    </div>
                                    @Html.EditorFor(model => model.RoomDescription, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.RoomDescription, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <div class="text-center">
                                        @Html.LabelFor(model => model.RoomNumber)
                                    </div>
                                    @Html.EditorFor(model => model.RoomNumber, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.RoomNumber, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.RoomPriceForOneNight)
                                    </div>
                                    @Html.EditorFor(model => model.RoomPriceForOneNight, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.RoomPriceForOneNight, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.Sleeps)
                                    </div>
                                    @Html.EditorFor(model => model.Sleeps, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Sleeps, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.RoomTypeId)
                                    </div>
                                    @Html.DropDownListFor(m => m.RoomTypeId, ViewBag.RoomTypes as SelectList, new {@class = "form-control"}) <br/>

                                    @Html.ValidationMessageFor(model => model.RoomTypeId, "", new {@class = "text-danger"})
                                </div>
                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.RoomStatusId)
                                    </div>
                                    @Html.DropDownListFor(m => m.RoomStatusId, ViewBag.RoomStatuses as SelectList, new {@class = "form-control"}) <br/>

                                    @Html.ValidationMessageFor(model => model.RoomStatusId, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <div class="text-center">

                                        @Html.LabelFor(model => model.RoomTypeId)
                                    </div>
                                    @Html.EditorFor(model => model.RoomTypeId, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.RoomTypeId, "", new {@class = "text-danger"})
                                </div>

                                <div class="form-group">
                                    <div class="text-center">
                                        @Html.LabelFor(model => model.RoomStatusId)
                                    </div>
                                    @Html.EditorFor(model => model.RoomStatusId, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.RoomStatusId, "", new {@class = "text-danger"})
                                </div>
                                @Html.HiddenFor(model => model.RoomImage)

                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-success"/>
                                </div>
                            </div>
                        }

                        <div>
                            @Html.ActionLink("Back to List", "AdminManage")
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>